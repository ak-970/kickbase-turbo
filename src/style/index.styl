body
  font-family sans-serif
  line-height 1.4em

h1
  margin 30px 0

h2
  margin 30px 0 20px 0

h3
  margin 20px 0 15px 0


ul
  padding-left 20px

section
  margin 20px 0





.buttons
  display flex
  flex-flow row wrap
  justify-content start
  align-items start
  gap 5px




button
input[type='submit']
  appearance none
  background $color2
  border none
  margin 5px 0
  padding 7px 15px
  transition background .3s ease

  &.selected
    background $color2-dark

  &:hover
    cursor pointer
    background $color2-dark

  
.notification
  color blue
  background $color2-light
  font-size 20px
  border-style solid
  border-radius 5px
  padding 10px
  margin-bottom 10px

.notification.error
  color red

.notification.success
  color green




.good
  color $green
.bad
  color $red





form
  display flex
  flex-flow row wrap
  justify-content start
  align-items start
  gap 10px

  div
    width 100%

    label
      display inline-block
      width 84px


  


.overview .teams
  // display flex
  // flex-flow row wrap
  // justify-content start
  // align-items start
  // gap 30px

  .team
    width 250px
    display flex
    flex-flow row wrap
    gap 20px

    > *
      width 100%

    .match-info
      display flex
      flex-flow row wrap
      gap 7px

      > *
        width 100%

    .match-banner
      display flex
      flex-flow row nowrap
      justify-content space-between
      align-items center
      background $color2
      padding 5px 10px

      &.pending .result
        opacity 0.5

      &.now .result
        position relative
        font-weight bold
        
        &:after
          position absolute
          top 0
          left 65px
          width 30px
          height 15px
          content 'LIVE'
          font-weight normal
          font-size 0.7em
          line-height 1.4em
          padding 2px 2px 1px 2px
          color #fff
          background $green

      .team-icon
        display block
        width 30px
        height 30px
        object-fit contain

      .info
        text-align center

      .time
        font-size 0.7em
        line-height 1.8em

    // ul
    //   list-style-type none
    //   margin 10px 0 0 0
    //   padding-left 0


    // .points
    //   display inline-block
    //   width 35px


.market .player-list
  padding-top 20px



.player-item
  display flex
  flex-flow row wrap
  justify-content space-between
  align-items center
  gap 10px

  // &.player-s
  //   flex-flow row nowrap

  &.player-l
    .person
      display flex
      flex-flow row nowrap
      justify-content space-between
      align-items end
      gap 15px

      img
        display block
        width 70px
        height 80px
        object-fit cover

    .chart-container
      width 100%



  &.not-lined-up
    opacity 0.4

  .player
    display flex
    flex-flow row nowrap
    gap 5px

    .team-icon
      display block
      width 20px
      height 20px
      object-fit contain



.player-item-group
  display flex
  flex-flow row wrap
  justify-content start
  align-items start
  gap 15px
  width 100%

  h3
    margin-bottom 0

  h3
  .player-item
    width 100%

  &.player-l .player-item
    width @css{calc(50% - 17.5px)}
    background: $color2-light
    padding 5px



.player-list
  display flex
  flex-flow row wrap
  justify-content start
  align-items start
  gap 35px





.hide
  display none !important




@media (min-width: 1399px)
  .player-item-group
    &.player-l .player-item
      width @css{calc((100% - 30px) / 3 - 10px)}


@media (min-width: 600px) and (max-width: 899px)
  .player-item
    &.player-l
      flex-wrap nowrap
      align-items start
      gap 20px

      .person
        flex-wrap wrap
        justify-content start
        align-items start
        width 130px

        img
          width 130px
          height 150px
  

  .player-item-group
    &.player-l .player-item
      width 100%



@media (max-width: 599px)
  .player-item-group
    &.player-l .player-item
      width 100%



